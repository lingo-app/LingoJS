{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "env": {
        "browser": false,
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "ignorePatterns": "/dist",
    "rules": {
        "class-methods-use-this": 0,
        "no-undef": "off",
        "no-unused-vars": "off",
        "no-console": [
            "error",
            {
                "allow": [
                    "warn",
                    "error",
                    "info",
                    "assert"
                ]
            }
        ],
        "no-param-reassign": 0,
        "no-use-before-define": 0,
        "import/no-extraneous-dependencies": 0,
        "no-underscore-dangle": 0,
        "object-shorthand": 0,
        "arrow-body-style": 0,
        "consistent-return": 0,
        "func-names": [
            "error",
            "as-needed"
        ],
        "prefer-destructuring": 0,
        "one-var": 0,
        "@typescript-eslint/no-explicit-any": 0
    }
}